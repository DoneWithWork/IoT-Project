{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**","./generated/**"],
          "env": ["DATABASE_URL","CLERK_WEBHOOK_SIGNING_SECRET","ENCRYPTION_KEY","CLERK_SECRET_KEY","NODE_ENV"]

    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "server": {
      "cache": false,
      "persistent": true
    },
     "run": {
      "cache": false,
      "persistent": true
    },
      "db:generate": {
    "cache": false
  },
  "db:migrate": {
    "cache": false,
    "persistent": true 
  },
  "db:deploy": {
    "cache": false
  },
  "db:reset":{
    "cache": false
  }
  }
}
